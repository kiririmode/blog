{
  "filters": {
    "comments": true,
    "whitelist": {
      "allow": [
        "/スクラムマスター/",
        "/\\[(https?|tex):.*\\]/"
      ]
    }
  },
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false
    },
    "spellcheck-tech-word": true,
    "textlint-rule-preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always",
        "exceptPunctuation": "false"
      }
    },
    "prh": {
      "rulePaths": ["./prh.yml"]
    }
  }
}
